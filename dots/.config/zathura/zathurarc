set synctex true
set statusbar-h-padding 0
set font 'Blex Mono normal 14'
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
set selection-clipboard clipboard

set default-bg                  "#0b0822"
set default-fg                  "#ebdbb2"

set statusbar-fg                "#ffffff"
set statusbar-bg                "#0b0822"

set inputbar-bg                 "#0b0822"
set inputbar-fg                 "#fbf1c7"

set notification-bg             "#0b0822"
set notification-fg             "#fbf1c7"

set notification-error-bg       "#0b0822"
set notification-error-fg       "#fb4934"

set notification-warning-bg     "#0b0822"
set notification-warning-fg     "#fb4934"

set highlight-color             "#fabd2f"
set highlight-active-color      "#83a598"

set completion-bg               "#0b0822"
set completion-fg               "#83a598"

set completion-highlight-fg     "#fbf1c7"
set completion-highlight-bg     "#0b0822"

set recolor-lightcolor          "#0b0822"
set recolor-darkcolor           "#ffffff"

set recolor                     "true"
set recolor-keephue             "true"
